<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/moviedisplay_background"
     >

    <Button
        android:id="@+id/pictureButton"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp"
        android:text="Get Picture" />

    <ImageView
        android:id="@+id/imageViewP"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="14dp"
   />

    <TextView
        android:id="@+id/textView_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12345"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="26dp"
        android:layout_toRightOf="@+id/imageViewP"
        android:text="director"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView12345"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_director"
        android:layout_alignTop="@+id/imageViewP"
        android:text="name" />

    <Button
        android:id="@+id/button_selectCinema"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/pictureButton"
        android:layout_alignRight="@+id/pictureButton"
        android:text="Select Cinema" />

</RelativeLayout>
